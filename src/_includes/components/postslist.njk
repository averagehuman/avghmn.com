<section>

        <div class="list">
            {% for post in postslist | reverse %}
                {% if limit === undefined or loop.index0 < limit %}
                    <div class="list-item">
                        <div class="list-item-content">
                            <div class="list-item-title">
                                  <a class="is-size-5 has-text-weight-normal" href="{{ post.url | url }}">
                                    {% if post.data.title %}
                                      {{ post.data.title }}
                                    {% else %}
                                      Untitled
                                    {% endif %}
                                  </a>
                            </div>
                            <div class="list-item-description">
                                <small>
                                    <time datetime="{{ post.data.date | machineDate }}">{{ post.data.date | readableDate }}</time>
                                </small>
                            </div>
                        </div>
                    </div>

                {% endif %}
            {% endfor %}
        </div>


</section>
